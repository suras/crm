<%= stylesheet_link_tag "users"%>
<div class="body-content account">
	<div class="container">
		<div class="row">
			<div class="span8">
				<div class="row">
					<div class="span8">
						<div class="title">Users</div>
					</div>
				</div>
				<div class="row">
					<div class="span8">
						<div class="outlined">
							<ul class="users-list">
								<% @users.each do |user| %>
								<li>
									<div class="position-relative">
										<div class="profile-pic-box">
											<img class="profile-pic75" src="<%= user.profile_pic(:small)%>">
										</div>
										<div class="profile-info-box">
											<div class="">
												<span class="head"><%= user.name %></span>
												
												<span>User name: <%= user.email%> </span>
												
												<span>Forward or BCC email to this address to attach it to a candidates's notes.</span>
												<span><%= user.email %> </span>
											</div>
											<div class="profile-info-right">
												<span ><%= (user.user_type == "owner") ? "Admin | User" : (link_to 'Cancel User',cancel_user_path(user),:confirm=>"Are you sure to cancel user?") %></span>
												<span><%= (user.user_type == "owner") ? (link_to "Edit User", edit_user_registration_path()) : (link_to "Edit User" , edit_user_path(user))%></span>
											</div>
										</div>
									</div>
								</li>
								<% end %>
							</ul>
						</div>
					</div>
				</div>
				<div class="row bottom-links">
					<div class="span8 add-more">
						<%= link_to "+ Add More Users", new_user_path() if @add_more==true %>
						<%= image_tag "btn-upgrade.png"%>
					</div>
				</div>
			</div>
			<div class="span4 rightSide">
				<div class="row h70"></div>
				<div class="row">
					<div class="span4 links-list">
						
						<span><%= link_to "add more users", new_user_path() %></span>			
						<span><%= link_to "click here to cancel your HootRecruit account", registration_path(@user), :confirm => "Are you sure?", :method => :delete %>
			</span>
					</div>
				</div>
				
			</div>
		</div>
		<div class="row">
			<div class="span8"></div>
			<div class="span4"></div>
		</div>
	</div>
</div>