<script>
 $(document).on("click","#chooseProfile",function(){
    $("#linkedin_linkedin_sheet").trigger("click");
    return false;
  });
</script>
<div class="body-content">
		<div class="container">
			<div class="row">
			<%=form_for @linkedin, url: upload_linkedin_path, :html => { :multipart => true } do |f|%>
				<div class="span12">
					<div class="row">
						<div class="span12">
							<div class="title">Upload Candidates from linkedin</div>
						</div>	
					</div>
					<div class="row">
					
                       <% if(@linkedin.errors.any?)%>
                       <div class="error">
                       <% @linkedin.errors.full_messages.each do |msg|%>
                            <%=msg%>
                          <% end %>
                          </div>
                       <% end %>
						<div class="span12">
							<div class="outlined padding15 position-relative">
								<div class="row">
									<div class="span12">Import candidates from linkedin.</div>
								</div>
								<div class="row">
								<%=f.file_field :linkedin_sheet, :class => "hide"%></br>
                               <div class="span2"><img id="chooseProfile" class="btn-custom" src="/assets/btn-choose.jpg"></div>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="span12">
							<div class="outlined padding15 position-relative">
								<div class="row">
								    <div class="span3"><input type="image" src ="/assets/btn-upload-import.jpg" class="btn-custom" /></div>
									<!--<div class="span3"><img class="btn-custom" src="img/btn-upload-import.jpg"></div>-->
									<div class="span3"><img class="btn-custom" src="/assets/btn-cancel-import.jpg"></div>
								</div>
							</div>
						</div>
					</div>
					
				</div>
				<%end%>
			</div>
			<div class="row">
				<div class="span8"></div>
				<div class="span4"></div>
			</div>
		</div>
	</div>
